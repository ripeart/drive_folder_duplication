      </head>
      <body>
        <div class="glass-card">
          <div id="form-ui">
            <h2>Copy Template</h2>
            <p>Select a folder structure to clone into your personal Google Drive.</p>
            
            <span class="label">Source Template</span>
            <select id="templateId">${templateOptions}</select>

            <span class="label">New Folder Name</span>
            <input type="text" id="folderName" placeholder="Enter folder name..." oninput="validateName()">
            <div id="errorMsg" class="error">Invalid name: Avoid / \\ : * ? " < > |</div>

            <button id="submitBtn" onclick="process()">Create Copy in My Drive</button>
            <div id="loader"></div>
          </div>

          <div id="success-ui" style="display:none;">
            <div class="success-badge">Success</div>
            <h2>Folder Ready</h2>
            <p>Your directory has been generated. You can now access it in your Drive.</p>
            <button onclick="window.open(document.getElementById('folderUrl').href, '_blank')">Open Folder</button>
            <a id="folderUrl" href="#" style="display:none;"></a>
            <p style="margin-top:30px;"><a href="javascript:location.reload()" style="color:#818cf8; text-decoration:none; font-weight:600; font-size: 13px;">Create another copy</a></p>
          </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
        <script>
          const choices = new Choices('#templateId', {
            searchEnabled: true,
            itemSelectText: '',
            shouldSort: false,
            placeholderValue: 'Search templates...'
          });

          function validateName() {
            const name = document.getElementById('folderName').value;
            const regex = /^[^\/\\:*?"<>|]+$/;
            const isValid = regex.test(name) && name.trim().length > 0;
            document.getElementById('errorMsg').style.display = (name && !isValid) ? 'block' : 'none';
            document.getElementById('submitBtn').disabled = !isValid;
            return isValid;
          }

          function process() {
            const name = document.getElementById('folderName').value;
            const id = document.getElementById('templateId').value;
            document.getElementById('submitBtn').disabled = true;
            document.getElementById('loader').style.display = 'block';
            
            google.script.run
              .withSuccessHandler(url => {
                document.getElementById('form-ui').style.display = 'none';
                document.getElementById('success-ui').style.display = 'block';
                document.getElementById('folderUrl').href = url;
              })
              .startCopyProcess(id, name);
          }
